<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_item_list"
    android:padding="10dp"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/atualizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atualizar telefone"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/id_mensagem_tell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Insira abaixo o nÃºmero atualizado:"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/background_item_list"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_tell_ddd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@android:drawable/editbox_background"
            android:textSize="20sp"
            android:inputType="phone"
            android:maxLength="2"
            android:hint="DD"
            android:textAlignment="center"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/edit_tell_5num"
            android:background="@android:drawable/editbox_background"
            android:textSize="20sp"
            android:inputType="phone"
            android:maxLength="4"
            android:hint="XXXX"
            android:textAlignment="center"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/edit_tell_4num"
            android:background="@android:drawable/editbox_background"
            android:textSize="20sp"
            android:inputType="phone"
            android:maxLength="4"
            android:hint="XXXX"
            android:textAlignment="center"/>


    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/bot_cancel"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:background="@drawable/button_gradient_red"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/bot_addtell"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_gradient_blue"
            android:text="Feito"
            android:textColor="#FFFFFF" />

    </RelativeLayout>

</LinearLayout>